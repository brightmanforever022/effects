{
  "version": "1.8.0",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./release/esm",
    "target": "es6",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "spec",
    "typings",
    "release"
  ]
}
